<h1><%= @category.name %></h1>
<h3>Products</h3>
<% @category.products.all.each do |prod| %>
  <li><%= link_to prod.name, category_product_path(@category,prod) %></li>
<% end %>
<br><br>
<% if is_admin? %>
  <%= link_to "Add Product", new_category_product_path(@category), class:'btn btn-success'%>
<% end %>
<br>
<hr>
<% if is_admin? %>
  <%= link_to "Edit Category", edit_category_path(@category), class:'btn btn-success'%>
  <%= link_to "Delete Category", category_path(@category), :data => {:confirm => "Warning: This will delete all products in this category.", :method => "delete"}, class:'btn btn-danger'%>
<% end %>
