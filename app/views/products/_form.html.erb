<%= render "layouts/errors", :object => @product %>

<%= form_for [@category,@product] do |c| %>
  <div class='form-group'>
    <%= c.label :name %>
    <%= c.text_field :name %>
  </div>
  <div class='form-group'>
    <%= c.label :description %>
    <%= c.text_field :description %>
  </div>
  <div class='form-group'>
    <%= c.label :price %>
    <%= c.text_field :price %>
  </div>
  <%= c.submit %>
<% end %>
